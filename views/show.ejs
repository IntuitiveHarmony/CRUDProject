<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs')%>
</head>
<body>
  <header>
    <%-include('./partials/nav.ejs')%>
  </header>


  <div class='mainContainer'>
    <h1 node><%=item.name%></h1>
    <div class='crudContainer'>
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- DELETE BUTTON                         -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
      <form action="<%=item.id%>?_method=DELETE" method="post" class='crudForm secret'>
        <input type='submit' value ='DELETE ITEM' class ='crudBtn'>
      </form>

  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- ARCHIVE/UNARCHIVE BUTTON              -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

      <% if (item.archive === false) { %>
      <form action="/archives/<%=item._id%>" class='crudForm secret'>
        <input type='submit' value ='ARCHIVE ITEM' class ='crudBtn'>
      </form>
      <%  } else { %>
      <form action="/unarchive/<%=item._id%>" class='crudForm secret'>
        <input type='submit' value ='UNARCHIVE ITEM' class ='crudBtn'>
      </form>
      <% } %>

  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- EDIT BUTTON                           -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
      <form action="/edit/<%=item._id%>" class='crudForm secret'>
        <input type='submit' value ='EDIT ITEM' class ='crudBtn'>
      </form>
  </div>

  <div class ='showContainer'>
    <div ='insideContainer'>
      <img src="<%=item.img%>" alt="<%= item.name %>" class ='imgShow'>
    </div>
    <div class='insideContainer'>
      <h3 class='showStat'>Style: <%=item.style%></h3>
      <p class='showStat'>Size: <%=item.size%></p>
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- CHECK IF ARCHIVED FOR PRICE DISPLAY   -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
      <% if (item.archive === false) { %>
      <h3 class='showStat'>Price: $<%=item.price%></h3>
      <%  } else { %>
      <h3 class='showStat'>This particular item has already been sold. <br><br> Please <a href ='/contact'>inquire</a> if you would like us to make something similar!</h3>
      <% } %>
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <!-- LOOPING OVER TAG ARRAY TO MAKE LINKS  -->
  <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
      <% for (let i=0; i < item.tags.length; i++ ) { %>
      <p class='showStat'>Tags: <a href = '<%=[i]%>'><%=item.tags[i]%></a><p>
      <%  } %>
    </div>
  </div>


</body>
</html>
